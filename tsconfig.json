{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module": "es6",
    "jsx": "react",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "strict": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist/es",
    "typeRoots": ["node_modules/@types"],
    "declaration": true,
    "declarationDir": "dist/types"
  },
  "include": ["src"],
  "exclude": ["**/*.test.*"]
}
