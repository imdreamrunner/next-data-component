{
  "name": "next-data-component",
  "version": "0.0.0",
  "description": "",
  "keywords": [],
  "main": "dist/commonjs/index.js",
  "module": "dist/es/index.js",
  "typings": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "author": "Xinzi Zhou <imdreamrunner@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/imdreamrunner/next-data-component"
  },
  "license": "MIT",
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "prettier": "prettier --write src/**",
    "lint": "tslint --project tsconfig.json -t codeFrame 'src/**/*.ts' 'src/**/*.tsx'",
    "prebuild": "rimraf dist",
    "build": "npm run build:es && npm run build:commonjs && typedoc",
    "build:es": "tsc",
    "build:commonjs": "tsc --module commonjs --outDir dist/commonjs",
    "start": "tsc -w",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "test:prod": "npm run lint && npm run test -- --no-cache"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "pre-push": "npm run lint && npm run test"
    }
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/dist/"
    ],
    "collectCoverageFrom": [
      "src/*.{js,ts,tsx}"
    ]
  },
  "peerDependencies": {
    "react": "^16.11.0",
    "next": "^9.1.2"
  },
  "devDependencies": {
    "@types/jest": "^24.0.21",
    "@types/jsdom": "^12.2.4",
    "@types/lodash": "^4.14.144",
    "@types/node": "^10.17.3",
    "@types/react": "^16.9.11",
    "@types/react-dom": "^16.9.3",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "jest-config": "^23.6.0",
    "jsdom": "^15.2.0",
    "lodash": "^4.17.15",
    "next": "^9.1.2",
    "prettier": "^1.18.2",
    "pretty-quick": "^2.0.0",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "rimraf": "^2.6.2",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.4.1",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "^1.15.0",
    "typedoc": "^0.15.0",
    "typescript": "^3.6.4"
  }
}
